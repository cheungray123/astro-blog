{
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "trailingComma": "es5",
    "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        }
    ]
}
